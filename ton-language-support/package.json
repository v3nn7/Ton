{
    "name": "ton-language-support",
    "displayName": "TON Language Support",
    "publisher": "v3nn7",
    "description": "Provides syntax highlighting for TON language files.",
    "version": "0.0.1",
    "main": "./extension.js",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ton",
                "aliases": [
                    "TON",
                    "ton"
                ],
                "extensions": [
                    ".ton"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ton",
                "scopeName": "source.ton",
                "path": "./syntaxes/ton.tmLanguage.json"
            }
        ],
        "completionProviders": [
            {
                "language": "ton",
                "triggerCharacters": ["."]
            }
        ]
    },
    "activationEvents": [
        "onLanguage:ton"
    ]
}